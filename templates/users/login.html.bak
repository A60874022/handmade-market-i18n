{% extends 'users/base_auth.html' %}
{% load i18n %}

{% block title %}{% trans "Вход" %}{% endblock %}

{% block content %}
<div class="text-center mb-4">
    <h2 class="fw-bold">{% trans "Вход в аккаунт" %}</h2>
    <p class="text-muted">{% trans "Войдите чтобы продолжить" %}</p>
</div>

{% if messages %}
{% for message in messages %}
<div class="alert alert-{{ message.tags }} alert-dismissible fade show" role="alert">
    {{ message }}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
{% endfor %}
{% endif %}

{% if form.errors %}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {% trans "Неверный email или пароль. Пожалуйста, попробуйте снова." %}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
{% endif %}

<form method="post">
    {% csrf_token %}

    <!-- Email -->
    <div class="mb-3">
        <label for="{{ form.username.id_for_label }}" class="form-label">{% trans "Email" %}</label>
        {{ form.username }}
    </div>

    <!-- Пароль -->
    <div class="mb-3">
        <label for="{{ form.password.id_for_label }}" class="form-label">{% trans "Пароль" %}</label>
        {{ form.password }}
    </div>

    <!-- Запомнить меня и сброс пароля -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="remember" id="remember">
            <label class="form-check-label" for="remember">
                {% trans "Запомнить меня" %}
            </label>
        </div>
        <a href="{% url 'users:password_reset' %}" class="text-decoration-none">{% trans "Забыли пароль?" %}</a>
    </div>

    <!-- Кнопка входа -->
    <button type="submit" class="btn btn-primary w-100 py-2 mb-3">
        {% trans "Войти" %}
    </button>

    <!-- Ссылка на регистрацию -->
    <div class="text-center">
        <span class="text-muted">{% trans "Нет аккаунта?" %}</span>
        <a href="{% url 'users:register' %}" class="text-decoration-none">{% trans "Зарегистрироваться" %}</a>
    </div>
</form>
{% endblock %}