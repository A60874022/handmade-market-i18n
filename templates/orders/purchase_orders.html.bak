{% extends "base.html" %}
{% load static i18n %}

{% block title %}{% trans "My Purchases" %} | HandmadeMarket{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="fw-bold mb-2">üõçÔ∏è {% trans "My Purchases" %}</h1>
                    <p class="text-muted">{% trans "History of your handmade products purchases" %}</p>
                </div>
                <div>
                    <a href="{% url 'orders:sale_orders' %}" class="btn btn-outline-primary me-2">
                        üìä {% trans "My Sales" %}
                    </a>
                    <a href="{% url 'orders:cart_view' %}" class="btn btn-primary">
                        üõí {% trans "Shopping Cart" %}
                    </a>
                </div>
            </div>

            {% if messages %}
            <div class="mb-4">
                {% for message in messages %}
                <div class="alert alert-{% if message.tags == 'error' %}danger{% else %}{{ message.tags }}{% endif %} alert-dismissible fade show"
                    role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                {% endfor %}
            </div>
            {% endif %}

            {% if orders %}
            <div class="row">
                {% for order in orders %}
                <div class="col-12 mb-4">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="fw-bold mb-1">{% trans "Order" %} #{{ order.id }}</h5>
                                <small class="text-muted">{% trans "Created:" %} {{ order.created_at|date:"d.m.Y H:i"
                                    }}</small>
                            </div>
                            <div class="text-end">
                                <span class="badge 
                                        {% if order.status == '–æ—Ñ–æ—Ä–º–ª–µ–Ω' %}bg-primary
                                        {% elif order.status == '–≤_—Ä–∞–±–æ—Ç–µ' %}bg-warning
                                        {% elif order.status == '–æ—Ç–ø—Ä–∞–≤–ª–µ–Ω' %}bg-info
                                        {% elif order.status == '–¥–æ—Å—Ç–∞–≤–ª–µ–Ω' %}bg-success
                                        {% else %}bg-secondary{% endif %} fs-6">
                                    {{ order.get_status_display }}
                                </span>
                                <div class="mt-1">
                                    <strong class="text-brown">{{ order.total_amount }} ‚ÇΩ</strong>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            {% for item in order.items.all %}
                            <div
                                class="row align-items-center mb-3 pb-3 {% if not forloop.last %}border-bottom{% endif %}">
                                <div class="col-md-2">
                                    {% if item.product.images.all %}
                                    <img src="{{ item.product.images.first.image.url }}" class="img-fluid rounded"
                                        alt="{{ item.product.title }}"
                                        style="width: 80px; height: 80px; object-fit: cover;">
                                    {% else %}
                                    <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                        style="width: 80px; height: 80px;">
                                        <span class="text-muted">üé®</span>
                                    </div>
                                    {% endif %}
                                </div>
                                <div class="col-md-6">
                                    <h6 class="fw-bold mb-1">{{ item.product.title }}</h6>
                                    <p class="text-muted small mb-1">{{ item.product.description|truncatewords:10 }}</p>
                                    <small class="text-muted">
                                        üé® {% trans "Master:" %}
                                        {% if item.product.master.get_full_name %}
                                        {{ item.product.master.get_full_name }}
                                        {% else %}
                                        {{ item.product.master.email }}
                                        {% endif %}
                                    </small>
                                </div>
                                <div class="col-md-2 text-center">
                                    <span class="fw-bold">√ó{{ item.quantity }}</span>
                                </div>
                                <div class="col-md-2 text-end">
                                    <span class="fw-bold text-brown">{{ item.total_price }} ‚ÇΩ</span>
                                    <div class="text-muted small">{% trans "per piece:" %} {{ item.price_at_moment }} ‚ÇΩ
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                        <div class="card-footer bg-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    {% trans "Updated:" %} {{ order.updated_at|date:"d.m.Y H:i" }}
                                </small>
                                <div>
                                    {% if order.status != '–¥–æ—Å—Ç–∞–≤–ª–µ–Ω' %}
                                    <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal"
                                        data-bs-target="#deleteOrderModal{{ order.id }}">
                                        üóë {% trans "Delete Order" %}
                                    </button>
                                    {% else %}
                                    <span class="text-muted small">{% trans "Delivered orders cannot be deleted"
                                        %}</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Modal –¥–ª—è –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏—è —É–¥–∞–ª–µ–Ω–∏—è -->
                    <div class="modal fade" id="deleteOrderModal{{ order.id }}" tabindex="-1"
                        aria-labelledby="deleteOrderModalLabel{{ order.id }}" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteOrderModalLabel{{ order.id }}">
                                        {% trans "Delete Confirmation" %}
                                    </h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p>{% trans "Are you sure you want to delete order" %} <strong>#{{ order.id
                                            }}</strong>?</p>
                                    <p class="text-danger">
                                        <small>{% trans "This action cannot be undone. All order data will be
                                            permanently deleted." %}</small>
                                    </p>
                                    {% if order.status != '–æ—Ñ–æ—Ä–º–ª–µ–Ω' %}
                                    <div class="alert alert-warning mt-3">
                                        <small>‚ö†Ô∏è {% trans "Warning! This order is already being processed. Deletion may
                                            cause problems for the craftsman." %}</small>
                                    </div>
                                    {% endif %}
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{% trans
                                        "Cancel" %}</button>
                                    <form action="{% url 'orders:delete_order' order.id %}" method="post">
                                        {% csrf_token %}
                                        <button type="submit" class="btn btn-danger">
                                            üóë {% trans "Delete Order" %}
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% else %}
            <div class="text-center py-5">
                <div class="mb-4" style="font-size: 4rem;">üõçÔ∏è</div>
                <h3 class="fw-bold mb-3">{% trans "You have no purchases yet" %}</h3>
                <p class="text-muted mb-4">{% trans "When you place an order, it will appear on this page" %}</p>
                <div class="d-flex justify-content-center gap-3">
                    <a href="{% url 'products:catalog' %}" class="btn btn-primary btn-lg px-4">
                        üõçÔ∏è {% trans "Go to Catalog" %}
                    </a>
                    <a href="{% url 'products:my_products' %}" class="btn btn-outline-primary btn-lg px-4">
                        üé® {% trans "My Products" %}
                    </a>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
    .text-brown {
        color: #8B4513;
    }

    .btn-primary {
        background-color: #8B4513;
        border-color: #8B4513;
        border-radius: 10px;
        font-weight: 600;
    }

    .btn-primary:hover {
        background-color: #654321;
        border-color: #654321;
    }
</style>
{% endblock %}